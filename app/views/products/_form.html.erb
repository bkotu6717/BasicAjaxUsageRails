<%= form_for @product, remote: true, html: { class: "form-horizontal", style: "display:inline;" } do |form| %>

	<div class="form-group">
		<%= form.label :Name, class: "col-sm-2 control-label" %>
		<div class="col-sm-10">
			<%= form.text_field :name, palce_holder: 'Product Title', class: 'form-control'  %>
		</div>
	</div>

	<div class="form-group">
		<%= form.label :Price, class: "col-sm-2 control-label" %>
		<div class="col-sm-10">
			<%= form.text_field :price, palce_holder: 'Product Title', class: "form-control" %>
		</div>
	</div>

	<div class="form-group">
	  <div class="col-sm-offset-2 col-sm-10">
			<%= form.submit class: "btn btn-default" %>
		</div>
	</div>


<% end %>